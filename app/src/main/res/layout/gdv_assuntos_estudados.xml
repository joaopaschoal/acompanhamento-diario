<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/gdv_assuntos_estudados_linear_layout">

    <TextView android:id="@+id/gdv_assuntos_estudados_txv_num_seq"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="0.5dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:padding="5dp"
        android:background="@color/light_gray" />

    <TextView android:id="@+id/gdv_assuntos_estudados_txv_nome_assunto"
        android:layout_width="210dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="0.5dp"
        android:layout_marginRight="0.5dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:padding="4dp"
        android:background="@color/light_gray" />
     
    <TextView android:id="@+id/gdv_assuntos_estudados_txv_tempo_estudo"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="0.5dp"
        android:layout_marginRight="0.5dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:padding="4dp"
        android:background="@color/light_gray" />

    <ImageButton android:id="@+id/gdv_assuntos_estudados_btn_remover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/minus"
        android:layout_marginLeft="0.5dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:padding="4dp"
        android:background="@color/light_gray">
    </ImageButton>
</LinearLayout>